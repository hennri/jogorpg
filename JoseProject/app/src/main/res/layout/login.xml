<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="@string/mensagem_inicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mensagemInicial"/>

    <TextView
            android:text="Usuario:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtViewLogin"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="UsuÃ¡rio"
            android:ems="10"
            android:id="@+id/txtBoxEmail"/>
    <TextView
            android:text="Senha:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtViewPassword"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Senha"
            android:ems="10"
            android:id="@+id/txtBoxPassword"/>
    <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"/>
</LinearLayout>